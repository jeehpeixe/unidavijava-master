<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    >

    <RadioButton android:id="@+id/radio_quero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quero"
        android:textSize="17dp"
        android:textAlignment="viewStart"
        android:padding="10dp"
        />

    <RadioButton android:id="@+id/radio_tenho"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tenho"
        android:textSize="17dp"
        android:textAlignment="viewStart"
        android:layout_below="@id/radio_quero"
        android:padding="10dp"
        />

    <RadioButton android:id="@+id/radio_joguei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Joguei"
        android:textSize="17dp"
        android:textAlignment="viewStart"
        android:layout_below="@id/radio_tenho"
        android:padding="10dp"
        />

    <RadioButton android:id="@+id/radio_zerei"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zerei"
        android:textSize="17dp"
        android:textAlignment="viewStart"
        android:layout_below="@id/radio_joguei"
        android:padding="10dp"
        />

    <RadioButton android:id="@+id/radio_fisico"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FÃ­sico"
        android:textSize="17dp"
        android:textAlignment="viewStart"
        android:layout_below="@id/radio_zerei"
        android:padding="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="67dp"
        android:text="Paguei:"
        android:id="@+id/label_paguei"
        android:layout_below="@id/radio_fisico"
        android:textSize="17dp"
        android:gravity="center"
        android:textColor="@color/colorBlack"
        />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/container_email"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_fisico"
        android:layout_toRightOf="@id/label_paguei"
        android:paddingLeft="6dp"
        android:paddingRight="4dp"
        android:hint="R$"
        >

        <EditText
            android:id="@+id/input_paguei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textColor="@color/colorBlack"
            android:textSize="17dp"
        />
    </android.support.design.widget.TextInputLayout>


</RelativeLayout>